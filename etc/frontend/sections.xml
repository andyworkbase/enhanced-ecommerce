<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/sections.xsd">
    <!-- Cart Actions -->
    <action name="checkout/cart">
        <section name="magecloud-datalayer"/>
    </action>
    <action name="checkout/cart/add">
        <section name="magecloud-datalayer"/>
    </action>
    <action name="checkout/cart/delete">
        <section name="magecloud-datalayer"/>
    </action>
    <action name="checkout/sidebar/removeItem">
        <section name="magecloud-datalayer"/>
    </action>
    <!-- Add Shipping Info -->
    <action name="rest/*/V1/guest-carts/*/shipping-information">
        <section name="magecloud-datalayer"/>
    </action>
    <action name="rest/*/V1/carts/*/shipping-information">
        <section name="magecloud-datalayer"/>
    </action>
    <!-- Add Payment Info -->
    <action name="rest/*/V1/guest-carts/*/set-payment-information">
        <section name="magecloud-datalayer"/>
    </action>
    <action name="rest/*/V1/carts/*/set-payment-information">
        <section name="magecloud-datalayer"/>
    </action>
    <!-- Place Order -->
    <action name="rest/*/V1/guest-carts/*/payment-information">
        <section name="magecloud-datalayer"/>
    </action>
    <action name="rest/*/V1/carts/*/payment-information">
        <section name="magecloud-datalayer"/>
    </action>
</config>
